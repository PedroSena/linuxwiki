<% disabled = local_assigns[:disabled].nil? ? false : disabled %>
<%= form_for model, html: {class: 'contact-form form-border'} do |f| %>
    <% if model.errors.any? %>
        <div class="alert alert-warning">
          <h5><%= pluralize(model.errors.count, 'error') %> prohibited this command from being saved:</h5>
          <ul>
            <% model.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :example %>
      <%= f.text_field :example, class: 'form-control', placeholder: 'rm -rf PATH_TO_DIRECTORY', disabled: disabled %>
    </div>
    <div class="form-group">
      <%= f.label :explanation %>
      <%= f.text_area :explanation, class: 'form-control', size: '24x3', placeholder: 'Removes DIRECTORY recursively', disabled: disabled %>
    </div>
    <div class="text-right">
      <% unless disabled %>
        <%= f.submit 'Save example', class: 'btn btn-custom btn-lg' %>
      <% end %>
    </div>
<% end %>