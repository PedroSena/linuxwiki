<% title @command.example %>
<% description @command.explanation %>
<% keywords @command.example + ' ' + @command.explanation[0..50] %>

<div id="features" class="site-hero clearfix">
  <div class="container form-container">
    <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
    <% end %>
    <%= render partial: 'commands/form', locals: { model: @command, disabled: current_user.try(:id) != @command.creator_id } %>
  </div>
</div>